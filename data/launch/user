target desktop {
	service x-vnd.Be-TRAK {
		launch /system/Tracker
		legacy
	}

	service x-vnd.Be-TSKB {
		launch /system/Deskbar
		legacy
	}
}

target first_boot {
	job x-vnd.Haiku-FirstBootPrompt
}

target installer {
	job x-vnd.Haiku-Installer
}

run {
	if {
		or {
			not file_exists /boot/home/config/settings/Locale\ settings
			read_only
		}
	}
	then {
		first_boot
	}
	else {
		desktop
	}
}
